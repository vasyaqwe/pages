{
   "compilerOptions": {
      /* Base Options: */
      "esModuleInterop": true,
      "skipLibCheck": true,
      "target": "esnext",
      "allowJs": true,
      "resolveJsonModule": true,
      "moduleDetection": "force",
      "isolatedModules": true,

      /* Strictness */
      "strict": true,
      "noUncheckedIndexedAccess": true,
      "checkJs": true,

      /* Bundled projects */
      "lib": ["dom", "dom.iterable", "esnext"],
      "noEmit": true,
      "module": "ESNext",
      "moduleResolution": "Bundler",
      "jsx": "react-jsx",
      "plugins": [{ "name": "next" }],
      "incremental": true,

      /* Path Aliases */
      "baseUrl": ".",
      "paths": {
         "@/*": ["./src/*"]
      },
      "types": ["vite/client", "bun"]
   },
   "include": ["**/*.ts", "**/*.tsx", "**/*.cjs"],
   "exclude": ["node_modules"]
}
